/* serve-detail.wxss */
@import "../title-template/title-template.wxss";
page{
  background: #fff;
}
.title-bg{
  background-image: url('https://mini.0315678.cn/wxImg/serve/detail/bg.jpg');
  background-repeat: no-repeat;
  background-position: center center;
  background-size: 750rpx 423rpx;
  height: 423rpx;
  padding: 58rpx 0 0 80rpx;
  box-sizing: border-box;
}
.options{
  float: left;
  
}
.titlePrice{
  width: 230rpx;
  border: 9rpx solid #fff;
}
.titlePrice .title{
  width: 144rpx;
  height: 105rpx;
  margin: 0 auto;
  text-align: center;
  color: #fff;
  font-size: 38rpx;
  font-weight: bold;
  border-bottom: 3rpx solid #fff;
  line-height: 133rpx;
}
.titlePrice .price{
  height: 102rpx;
  text-align: center;
  color: #ffbd1a;
  line-height: 105rpx;
  font-size: 50rpx;
  font-weight: bold;
}
.extra{
  border: 9rpx solid #fff;
  border-top: none;
  height: 50rpx;
  line-height: 50rpx;
  text-align: center;
  font-size: 22rpx;
  color: #fff;
}
.content{
  float: left;
  margin-left: 76rpx;
  font-size: 24rpx;
  margin-top: 22rpx;
  line-height: 40rpx;
  color: #fff;
}
.compare{
  width: 690rpx;
  height: 930rpx;
  margin: 0 auto; 
}
.display{
  padding: 0 30rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: space-between;
  padding-bottom: 70rpx;
}
.display image{
  width: 334rpx;
  height: 595rpx; 
  display: block;
}
.display .text{
  height: 76rpx;
  line-height: 76rpx;
  text-align: center;
  font-size: 24rpx;
}